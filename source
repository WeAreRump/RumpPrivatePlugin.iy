local Version = "0.1-pre"

local NightVision = false

local Plugin = {
	["PluginName"] = "Rump's Private Plugin v" .. Version,
	["PluginDescription"] = "Fun plugin",

	["Commands"] = {
		["rpp"] = {
			["ListName"] = "rppinfo [info/changelog]",
			["Description"] = "Rump's Private Plugin\nShows info",
			["Aliases"] = {},
			["Function"] = function(args, speaker)
				if args[1] == "info" then
					notify("Rump's Private Plugin", "Version: " .. Version .. "\nMaker: Rump" .. "\nTester: DrPeter")
				elseif args[1] == "changelog" then
					notify("RPP v" .. Version .. "Changelog", "* Release")
				end
			end
		},
		
		["doublespeed"] = {
			["ListName"] = "doublespeed",
			["Description"] = "Rump's Private Plugin\nDoubles your speed by 2.",
			["Aliases"] = {},
			["Function"] = function(args, speaker)
				local humanoid = game.Players.LocalPlayer.Character:WaitForChild("Humanoid")
				humanoid.WalkSpeed = humanoid.WalkSpeed * 2
			end
		},
		
		["nightvision"] = {
			["ListName"] = "nightvision / nv",
			["Description"] = "Rump's Private Plugin\nToggles night vision",
			["Aliases"] = {"nv"},
			["Function"] = function(args, speaker)
				if NightVision == false then
					local nv = Instance.new("ColorCorrectionEffect", game.Lighting)
					nv.Name = "NightVision"
					nv.TintColor = Color3.new(0, 1, 0)
					
					NightVision = true
				else
					game.Lighting:FindFirstChild("NightVision"):Destroy()
					
					NightVision = false
				end
			end
		}
	}
}

return Plugin
